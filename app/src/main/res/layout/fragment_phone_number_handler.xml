<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneNumberHandler">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:paddingHorizontal="15dp"
        android:paddingTop="50dp">



        <TextView
            android:id="@+id/phone_heading"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Phone Number"
            android:fontFamily="@font/source_sans_bold"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            />

        <HorizontalScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_heading"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/text_area_bg"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://www.google.com"
                android:textColor="@color/white"
                android:fontFamily="@font/source_sans"
                android:textSize="18dp"

                />
        </HorizontalScrollView>
        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/scroll_view"
            android:paddingHorizontal="30dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/make_call_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="10dp"
                android:text="Make a Call"
                android:layout_above="@id/add_to_contacts_button"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/call"
                android:paddingLeft="70dp"
                android:paddingRight="60dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/source_sans_semibold"
                android:textSize="20dp"
                android:background="@drawable/selected_button"
                android:textColor="@color/white"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_to_contacts_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="10dp"
                android:text="Add to Contacts"
                android:layout_above="@id/copy_button"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/new_user"
                android:paddingLeft="70dp"
                android:paddingRight="20dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/source_sans_semibold"
                android:textSize="20dp"
                android:background="@drawable/selected_button"
                android:textColor="@color/white"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/copy_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:text="Copy Number"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/copy"
                android:paddingLeft="70dp"
                android:paddingRight="40dp"
                android:fontFamily="@font/source_sans_semibold"
                android:textSize="20dp"
                android:background="@drawable/selected_button"
                android:textColor="@color/white"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/share_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="10dp"
                android:text="Share Number"
                android:layout_below="@id/copy_button"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/share"
                android:paddingLeft="70dp"
                android:paddingRight="30dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/source_sans_semibold"
                android:textSize="20dp"
                android:background="@drawable/selected_button"
                android:textColor="@color/white"
                />
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>