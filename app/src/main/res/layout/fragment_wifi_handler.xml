<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WifiHandler">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:paddingHorizontal="15dp"
        android:paddingTop="50dp">

        <LinearLayout
            android:id="@+id/network_ssid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center">


            <TextView
                android:id="@+id/ssid_heading"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/source_sans_bold"
                android:text="Network SSID"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:id="@+id/scroll_view1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/url_heading"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/text_area_bg"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/ssid_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans"
                    android:text="https://www.google.com"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_below="@id/network_ssid_layout">


            <TextView
                android:id="@+id/password_heading"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/source_sans_bold"
                android:text="WIFI-Password"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:id="@+id/scroll_view2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/url_heading"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/text_area_bg"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans"
                    android:text="https://www.google.com"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/encryption_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_below="@id/password_layout">


            <TextView
                android:id="@+id/encryption_heading"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/source_sans_bold"
                android:text="Encryption"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:id="@+id/scroll_view3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/url_heading"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/text_area_bg"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/encryption_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans"
                    android:text="https://www.google.com"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />
            </HorizontalScrollView>
        </LinearLayout>
