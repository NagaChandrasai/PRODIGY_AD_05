<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/all_scan_button"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="All Scans"
                    android:background="@drawable/selected_button"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:fontFamily="@font/source_sans_semibold"
                    android:textAllCaps="false"
                    android:layout_marginRight="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/favorite_button"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/unselected_button"
                    android:text="Favorites"
                    android:textAllCaps="false"
                    android:fontFamily="@font/source_sans_semibold"
                    android:textSize="16dp"
                    android:textColor="#99FFFFFF"
                    />
            </LinearLayout>

            <ImageButton
                android:id="@+id/delete_all_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/unselected_button"
                android:src="@drawable/delete"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/all_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/button_layout"
            />
        <TextView
            android:id="@+id/nothing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nothing_to_show"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone"
            android:fontFamily="@font/source_sans"
            />
    </RelativeLayout>


</FrameLayout>